<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresetsJames"
    android:background="@drawable/gradient_v2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="132dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonCustomPage"
        android:layout_marginStart="53dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Pick a Preset"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/numberPickerTemp"
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:np_dividerColor="#00aaff"
        app:np_dividerThickness="0dp"
        app:np_formatter="%01d\u2103"
        app:np_max="100"
        app:np_min="0"
        app:np_orientation="horizontal"
        app:np_selectedTextColor="#ffffff"
        app:np_selectedTextSize="80sp"
        app:np_textColor="#ebebeb"
        app:np_textSize="23sp"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="1dp">

    </com.shawnlin.numberpicker.NumberPicker>

    <Button
        android:id="@+id/buttonCustomPage"
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/backicon"
        android:padding="35dp"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCoffee"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/buttonhotcoffee"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonTea"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/buttonhottea"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonChocolate"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/buttonhotchocolate"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonMilk"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/buttonhotmilk"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonRoomTemp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/buttonroomtemperature"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/buttoncancel"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="162dp"
            android:textColor="#000000" />

    </LinearLayout>
</RelativeLayout>